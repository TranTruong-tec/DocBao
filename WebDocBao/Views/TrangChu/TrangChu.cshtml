@model List<WebDocBao.Models.BaiViet>
@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}
<link href="~/Assets/Css/styleTrangChu.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.10.2.min.js"></script>


<script>
        var pageNo = 0;
        var pageCount =@( ViewBag.pageCount)
        function Load() {
            if ($(".loading").css("display") == "none") {
                $(".loading").show();
                $.ajax({
                    url: "/TrangChu/LoadBaiVietPartial",
                    data: { pageNo: pageNo },
                    success: function (respone) {
                        $("#result").append(respone);
                        pageNo++;
                        $(".loading").hide();
                    }

                });

            }
        }
        $(function () {
            Load();
            $(window).scroll(function () {
                if ($(window).scrollTop() + $(window).height() == $(document).height()) {
                    if (pageNo < pageCount) {
                        Load();
                    }
                }
            });
        });
</script>

