
@model IEnumerable<WebDocBao.Models.BaiViet>
@{
    ViewBag.Title = "QLBaiViet";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản Lý Bài Viết</h2>
<div class="row">
    <div>

        <a href="@Url.Action("NhapBaiViet")" class="btn btn-success btn-icon-split" style="font-size:25px>
            <span class="icon text-white-50">
                <i class="fas fa-plus-square"></i>
            </span>
            <span>Thêm Bài Viết Mới</span>
        </a>
    </div>

</div>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3"></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="80%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã</th>
                            <th>Tựa bài viết</th>
                            <th>Nội dung tóm tắt</th>
                            <th>Nội dung chính</th>
                            <th>Ngày Đăng</th>
                            <th>Mã Loại</th>
                            <th>Hình ảnh</th>
                            <th></th>
                            <th></th>


                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                        <tr>


                            <td>
                                @Html.DisplayFor(modelitem => item.maBaiViet)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.tuaBaiViet)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.noiDungTomTat)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.noiDungChinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.ngayDang)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.maLoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelitem => item.hinhAnh)
                            </td>
                            <td>
                                <a href="~/BaiViet/Sua/@item.maBaiViet" title="Suu">Sửa </a>

                            </td>
                            <td>
                                <a href="~/BaiViet/Xoa/@item.maBaiViet" title="Xoa">Xóa </a>
                            </td>


                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

