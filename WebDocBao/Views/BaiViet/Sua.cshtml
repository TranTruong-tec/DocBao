@model WebDocBao.Models.BaiViet

@{
    ViewBag.Title = "Sua";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Mã Bài:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.maBaiViet, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.maBaiViet, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Tựa đề:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tuaBaiViet, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tuaBaiViet, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Nội dung tóm tắt:</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.noiDungTomTat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.noiDungTomTat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Nội dung chính:</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.noiDungChinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.noiDungChinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Ngày đăng:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ngayDang, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.ngayDang, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Loại:</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.maLoai, (SelectList)ViewBag.LoaiBaiViet, string.Empty)
                @Html.ValidationMessageFor(model => model.maLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Hình Ảnh:</label>
            <div class="col-md-10">
                <input type="file" name="myfileImage" class="fileupload1" /><hr />

                <img src="@Url.Content("~/Content/images/" + Model.hinhAnh)" width="120px" /> (Hình có sẵn)
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval");
}
