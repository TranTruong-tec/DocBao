@model WebDocBao.Models.TaiKhoan
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LayoutTrangChu.cshtml";
    <link href="~/Assets/Css/styleTrangChu.css" rel="stylesheet" />
}

<div id="ThongTinDKy">
    @ViewBag.thongbao
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">

            <h2>Đăng Ký Tài Khoản</h2>
            <hr />
            @Html.ValidationSummary(true)
            <div>

                <h3 style="color:green;">
                    *Bạn vui lòng điền đầy đủ các thông tin sau -
                    Please fill in the following information*
                </h3>
            </div>
            <p>1.Thông tin đăng nhập - Login information"</p>

            <div class="form-group">

                @Html.LabelFor(model => model.maTaiKhoan, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.maTaiKhoan)
                    @Html.ValidationMessageFor(model => model.maTaiKhoan)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.tenDayDu, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tenDayDu)
                    @Html.ValidationMessageFor(model => model.tenDayDu)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.matKhau, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.matKhau)
                    @Html.ValidationMessageFor(model => model.matKhau)
                </div>
            </div>




            <p>2.Thông tin cá nhân - Your information</p>

            <div class="form-group">
                @Html.LabelFor(model => model.email, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.email)
                    @Html.ValidationMessageFor(model => model.email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.diaChi, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.diaChi)
                    @Html.ValidationMessageFor(model => model.diaChi)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.sdt, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.sdt)
                    @Html.ValidationMessageFor(model => model.sdt)
                </div>
            </div>

            <p>3.Mã xác nhận - Authentication code</p>
            <div class="form-group">
                @Html.LabelFor(model => model.Captcha)
                <a href="@Url.Action("DangKy")">
                    <img alt="Captcha" src="@Url.Action("CapchaImage")" style="" />
                </a>
                @Html.EditorFor(model => model.Captcha)
                @Html.ValidationMessageFor(model => model.Captcha)

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đăng Ký" class="btn btn-default" />
                </div>
            </div>
        </div>
        <a href="@Url.Action("TrangChu", "TrangChu")">Quay về </a>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

